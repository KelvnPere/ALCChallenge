<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Welcome to ALC 4.0"
            android:layout_width="0dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:id="@+id/textView" android:textSize="36sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"/>
    <Button
            android:id="@+id/button_about_alc"
            android:text="About ALC"
            android:fontFamily="sans-serif-black"
            app:autoSizeTextType="uniform"
            android:layout_width="200dp"
            android:textSize="14sp"
            android:background="@color/colorButton"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="132dp"
            />

    <Button
            android:id="@+id/button_my_profile"
            android:text="   MY PROFILE  "
            android:layout_width="200dp"
            android:background="@color/colorButton"
            app:autoSizeTextType="uniform"
            android:fontFamily="sans-serif-black"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/button_about_alc" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/button_about_alc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_about_alc" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.1"/>
</android.support.constraint.ConstraintLayout>